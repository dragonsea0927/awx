apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ kubernetes_deployment_name }}-rsyslog-config
  namespace: {{ kubernetes_namespace }}
data:
  rsyslog-config: |
    $WorkDirectory /var/lib/awx/rsyslog
    $IncludeConfig /etc/rsyslog.d/*.conf
    *.* stop
    action(type="omfwd" target="localhost" port="9000" protocol="udp")
